<?xml version="1.0" encoding="UTF-8"?>
<element>


<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
         http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <display-name>HR Management System</display-name>

    <!-- Servlet for Login -->
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.example.hr.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <!-- Servlet for Home -->
    <servlet>
        <servlet-name>HomeServlet</servlet-name>
        <servlet-class>com.example.hr.HomeServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>HomeServlet</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>

    <!-- Servlet for Adding Employee -->
    <servlet>
        <servlet-name>AddEmployeeServlet</servlet-name>
        <servlet-class>com.example.hr.AddEmployeeServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddEmployeeServlet</servlet-name>
        <url-pattern>/addEmployee</url-pattern>
    </servlet-mapping>

    <!-- Servlet for Deleting Employee -->
    <servlet>
        <servlet-name>DeleteEmployeeServlet</servlet-name>
        <servlet-class>com.example.hr.DeleteEmployeeServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DeleteEmployeeServlet</servlet-name>
        <url-pattern>/deleteEmployee</url-pattern>
    </servlet-mapping>

    <!-- Servlet for Leave Management -->
    <servlet>
        <servlet-name>LeaveServlet</servlet-name>
        <servlet-class>com.example.hr.LeaveServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LeaveServlet</servlet-name>
        <url-pattern>/leave</url-pattern>
    </servlet-mapping>

    <!-- Servlet for Attendance Management -->
    <servlet>
        <servlet-name>AttendanceServlet</servlet-name>
        <servlet-class>com.example.hr.AttendanceServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AttendanceServlet</servlet-name>
        <url-pattern>/attendance</url-pattern>
    </servlet-mapping>

    <!-- Servlet for Goal Management -->
    <servlet>
        <servlet-name>GoalServlet</servlet-name>
        <servlet-class>com.example.hr.GoalServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GoalServlet</servlet-name>
        <url-pattern>/goals</url-pattern>
    </servlet-mapping>

    <!-- JDBC DataSource Configuration (if using JNDI) -->
    <resource-ref>
        <description>DB Connection</description>
        <res-ref-name>jdbc/hrdb</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <!-- - <res-link>jdbc/hrdb</res-link>-->
    </resource-ref>

</web-app>
</element>
